<div class="container">

    <div class="row">

        <div class="col-md-6">
            <h1 style="font-weight: 100">Nueva motocicleta</h1>
        </div>

        <div class="col-md-6">

            <form action="motorbikes/create-motorbike" method="POST">
                <div class="form-group">
                    <label for="name-input">Nombre de la motocicleta</label>
                    <input name="name" type="text" class="form-control" id="name-input">
                </div>
                <div class="form-group">
                    <label for="typesMotorbike-input">Tipos de motocicleta</label>
                    <input name="typesMotorbike" type="text" class="form-control" id="description-input">
                </div>
                <div class="form-group">
                    <label for="description-input">Descrippcion</label>
                    <input name="description" type="number" class="form-control" id="inversions-input">
                </div>
                <div class="form-group">
                    <label for="brand-input">cc</label>
                    <input name="brand" type="number" class="form-control" id="length-input">
                </div>
                <div class="form-group">
                    <label for="park-list">Parque en el que se encuentra:</label>
                    <select name="park_id" class="form-control" id="park-list">

                        <option>Seleccionar</option>

                        {{#each motorbikes}}
                        <option value="{{_id}}">{{name}}</option> {{!-- id con barra baja objeto sin barra baja es un
                        string --}}
                        {{/each}}

                    </select>
                </div>

                <button type="submit" class="btn btn-dark">Crear motocicleta</button>
                <a href="/motorbikes" class="btn btn-dark">Volver</a>

            </form>
        </div>

    </div>
</div>